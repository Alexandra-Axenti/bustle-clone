{{#if updateNoteForm}}
  <h4>Update {{note.headline}} by {{note.author}}</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="headline">Headline</label>
        {{input value=headline id="headline" placeholder=note.headline}}
      </div>

      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author" placeholder=note.author}}
      </div>

      <div class="form-group">
        <label for="date">Date</label>
        {{input value=date id="date" placeholder=note.date}}
      </div>

      <div class="form-group">
        <label for="content">Content</label>
        {{input value=content id="content" placeholder=note.content}}
      </div>

      <div class="form-group">
        <label for="image">Image URL</label>
        {{input value=image id="image" placeholder=note.image}}
      </div>

      <button {{action 'update' note}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'updateNoteForm'}}>Update Note</button>
{{/if}}
